<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainMenuController"
      alignment="CENTER" spacing="20" prefHeight="320.0" prefWidth="750.0" styleClass="root">
    
    <stylesheets>
        <!--<URL value="@style.css"/>-->
    </stylesheets>
    
    <HBox alignment="CENTER" spacing="10">
        <ImageView fitHeight="50.0" fitWidth="50.0">
            <Image url="@uts_logo.png" />
        </ImageView>
        <Label text="U:PASS Session Management System" styleClass="header"/>
    </HBox>
    
    <Button text="Login" fx:id="loginButton" styleClass="button" onAction="#handleLogin"/>
    <Button text="Exit" fx:id="exitButton" styleClass="button" onAction="#handleExit"/>
    
</VBox>

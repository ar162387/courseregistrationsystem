<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.SessionController" hgap="10" vgap="10" stylesheets="@style.css">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <TextField fx:id="subjectField" promptText="Subject" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ComboBox fx:id="dayComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <TextField fx:id="startField" promptText="Start Time" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="durationField" promptText="Duration" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <TextField fx:id="roomField" promptText="Room" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="capacityField" promptText="Capacity" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <TextField fx:id="enrolledField" promptText="Enrolled" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Button fx:id="updateButton" text="Update" onAction="#handleUpdate" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="button"/>
    <Button fx:id="closeButton" text="Close" onAction="#handleClose" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="button"/>
</GridPane>

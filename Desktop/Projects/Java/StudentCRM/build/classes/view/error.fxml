<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ErrorController" spacing="10" alignment="CENTER" style="-fx-background-color: blue;">
    <children>
        <Label text="Form Validation Errors" textFill="white" style="-fx-font-size: 16px;" />
        <TextArea fx:id="errorsTextArea" editable="false" wrapText="true" prefHeight="200.0" prefWidth="400.0" style="-fx-text-fill: yellow; -fx-control-inner-background: blue;" />
        <Button text="Close" onAction="#handleClose" />
    </children>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</VBox>
